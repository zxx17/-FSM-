<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zxx17.logistics.mapper.StatesMapper">

    <resultMap type="org.zxx17.logistics.domain.entity.States" id="StatesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="applicationId" column="application_id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insertAppStates" parameterType="java.util.List">
        INSERT INTO states (id, code, name, application_id)
        VALUES
        <foreach item="state" collection="stateList" separator=",">
            (#{state.id}, #{state.code}, #{state.name}, #{state.applicationId})
        </foreach>
    </insert>

</mapper>
